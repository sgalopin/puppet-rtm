#!/bin/bash
set -e
set -o pipefail

#----------------------------------------------------------------
# Download the Sencha Cmd archive
#----------------------------------------------------------------
if [ ! -f "<%= $tmp_directory %>/SenchaCmd.sh.zip" ]; then
	wget -O <%= $tmp_directory %>/SenchaCmd.sh.zip http://cdn.sencha.com/cmd/6.1.3/no-jre/SenchaCmd-6.1.3-linux-amd64.sh.zip 2>&1
	unzip <%= $tmp_directory %>/SenchaCmd.sh.zip -d <%= $tmp_directory %>
fi

#----------------------------------------------------------------
# Install Sencha Cmd for the root user
# https://docs.sencha.com/cmd/guides/intro_to_cmd.html
# The default installation directory is set to /root/bin/Sencha/Cmd/6.1.3.42.
#----------------------------------------------------------------
bash <%= $tmp_directory %>/SenchaCmd-6.1.3.42-linux-amd64.sh -q